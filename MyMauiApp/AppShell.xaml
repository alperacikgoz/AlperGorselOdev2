<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyMauiApp"
    FlyoutBehavior="Flyout">

  <!-- Sol üstteki menü ikonuna (default hamburger) tıklayınca buradaki başlıklar görünecek -->
  
  <FlyoutItem Title="Ana Sayfa">
    <ShellContent
      Title="Ana Sayfa"
      ContentTemplate="{DataTemplate local:MainPage}" />
  </FlyoutItem>

  <FlyoutItem Title="Kredi Hesaplama">
    <ShellContent
      Title="Kredi Hesaplama"
      ContentTemplate="{DataTemplate local:CreditPage}" />
  </FlyoutItem>

  <FlyoutItem Title="VKİ Hesaplama">
    <ShellContent
      Title="VKİ Hesaplama"
      ContentTemplate="{DataTemplate local:BmiPage}" />
  </FlyoutItem>

  <FlyoutItem Title="Renk Seçici">
    <ShellContent
      Title="Renk Seçici"
      ContentTemplate="{DataTemplate local:ColorPage}" />
  </FlyoutItem>

</Shell>

